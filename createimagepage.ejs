<html>
    <head>
        <title>Image Page</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" type="text/css" />
		
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js" type="text/javascript"></script>
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

		<script type="text/javascript" src="./createimagepage.js"></script>
        <style type="text/css">
			small{color:red;}
		</style>
		
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-lg-offset-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4 col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <center><b><u><h3>REGISTRATION FORM WITH IMAGE</h3></u></b></center>
                    <form action="createimagepage" method="post">
                        <fieldset>
                            <div class="form-group">
                                <center><span><i class="fa fa-picture-o"></i> Upload Profile Image:</span></center><br />
                                <center><img id="ImgProductDisplayPic" src="DefaultProduct.jpg" alt="REMA - Rajkot Electric Merchant Association" height="250px" width="220px"/></center><br /><br />
                                <center><input type='file' id="FU_ProductImage" multiple /></center><br />
                                <center><small id="ProductImageValidate"></small></center>
                            </div>
                            <div class="form-group">
                                <span>FIRST NAME</span>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input type="text" id="FNAME" name="FNAME"class="form-control" placeholder="Enter First Name..." maxlength="20"/>
                                </div>
                                <small id = "FNAMEVALIDATE"></small>
                            </div>
                            <div class="form-group">
                                <span>LAST NAME</span>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input type="text" id="LNAME" name="LNAME"class="form-control" placeholder="Enter Last Name..." maxlength="20"/>
                                </div>
                                <small id = "LNAMEVALIDATE"></small>
                            </div>
                            <div class="form-group">
                                <span>CONTACTNO</span>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input type="text" id="CONTACTNO"class="form-control" name="CONTACTNO" placeholder="Enter ContactNo..." maxlength="10"/>
                                </div>
                                <small id = "CONTACTNOVALIDATE"></small>
                            </div>
                            <div class="form-group">
                                <span>EMAILID</span>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input type="text" id="EMAILID" class="form-control" name="EMAILIDE" placeholder="Enter Emailid..." maxlength="20"/>
                                </div>
                                <small id = "EMAILIDVALIDATE"></small>
                            </div>
                            <div class="form-group">
                                <span>PASSWORD</span>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input type="password" id="PASSWORD"class="form-control" name="PASSWORD" placeholder="Enter Password..." maxlength="12"/>
                                </div>
                                <small id = "PASSWORDVALIDATE"></small>
                            </div>

                            <input type="button" id = "btn" value= "New Account" class="btn btn-primary"/>
                        </fieldset>
                    </form> 
                </div>
            </div>
        </div>
    </body>
</html>